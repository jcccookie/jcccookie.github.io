<html>
   <div class="mt-5">
      <h3 class="text-center mb-3">Edit Class</h3>
      <div class="d-flex justify-content-center">
         <form id="edit-class" action="/admin/class" method="post">
               <div class="form-group">
                  <label for="subject_selector">Subject</label>
                  <select class="form-control" name="subject" id="subject-selector">
                     <option value="none">None</option>
                     {{#each subjects}}
                     <option value={{id}}>{{name}}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <label for="term-selector">Term</label>
                  <select class="form-control" name="term" id="term-selector">
                     <option value="none">None</option>
                     {{#each terms}}
                     <option value={{id}}>{{name}} {{year}}</option>
                     {{/each}}
                  </select>
               </div>
               <div class="form-group">
                  <label for="name">Name</label>
                  <input class="form-control" id="name" type="text" name="name" value="{{class.name}}">
               </div>
               <div class="row">
                  <div class="form-group col-md-6">
                     <label for="max">Max Students</label>
                     <input class="form-control" id="max" type="number" name="max" value="{{class.max}}">
                  </div>
                  <div class="form-group col-md-6">
                     <label for="credit">Credit</label>
                     <input class="form-control" id="credit" type="number" name="credit" value="{{class.credit}}">
                  </div>
               </div>
         </form>
      </div>
      <div class="d-flex justify-content-center">
         <button class="btn btn-info m-2" onclick="editClass({{class.id}})">Save</button>
         <input class="btn btn-secondary m-2" type="button" value="Cancel" onclick="history.back()">
      </div>
   </div>
<script defer>
   selectSubject({{class.sid}});
   selectTerm({{class.tid}});
</script>
</html>
