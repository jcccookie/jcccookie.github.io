      </div>
      <div class="col-8">
         <table id="terms">
            <thead>
               <th> Name </th>
               <th> Year </th>
               <th> Max Credit </th>
            </thead>
            <tbody>
               {{#each terms}}
               <tr>
                  <td> {{name}} </td>
                  <td> {{year}} </td>
                  <td> {{max}} </td>
                  <td>
                     <button
                        onclick="deleteTerm({{id}})"
                     > Delete </button>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</div>

