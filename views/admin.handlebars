<div id="title">
   <h1>Admin Page</h1>
</div>

<div id="subtitle">
   <h2>Add Data</h2>
</div>

<h3>Add Class</h3>
<form id="addClass" action="/admin/class" method="post">
   Subject: <select name="subject"> 
      {{#each subjects}}
      <option value={{id}}>{{name}}</option>
      {{/each}}
    </select><br>
   Term: <select name="term">
      {{#each terms}}
      <option value={{id}}>{{name}} {{year}}</option>
      {{/each}}
   </select><br>
   Name: <input type="text" name="name"><br>
   Max: <input type="number" name="max"><br>
   Credit: <input type="number" name="credit"><br>
   <input type="submit" value="Add">
</form>

<h3>Add Student</h3>
<form id="addStudent" action="/admin/student" method="post">
   First Name: <input type="text" name="fname"><br>
   Middle Name: <input type="text" name="mname"><br>
   Last Name: <input type="text" name="lname"><br>
   Email: <input type="text" name="email"><br>
   Phone Number: <input type="text" name="phone"><br>
   <input type="submit" value="Add">
</form>

<h3>Add Subject</h3>
<form id="addSubject" action="/admin/subject" method="post">
   Subject Name: <input type="text" name="name"><br>
   <input type="submit" value="Add">
</form>

<h3>Add Term</h3>
<form id="addTerm" action="/admin/term" method="post">
   Term Name: <input type="text" name="name"><br>
   Year: <input type="number" name="year"><br>
   Max Credit: <input type="number" name="max"><br>
   <input type="submit" value="Add">
</form>

<div id="subtitle">
   <h2>DB Tables</h2>
</div>

<div id="head">
   <h3> Class List </h3>
</div>
<table id="classes">
   <thead>
      <th> Id </th>
      <th> Subject </th>
      <th> Term </th>
      <th> Name </th>
      <th> Enrolled </th>
      <th> Cap </th>
      <th> Credit </th>
   </thead>
   <tbody>
      {{#each classes}}
      <tr>
         <td> {{id}} </td>
         <td> {{sname}} </td>
         <td> {{tname}} {{tyear}}</td>
         <td> {{cname}} </td>
         <td> {{enroll}} </td>
         <td> {{max}} </td>
         <td> {{credit}} </td>
      </tr>
      {{/each}}
   </tbody>
</table> 

<div id="head">
   <h3> Student List </h3>
</div>
<table id="students">
   <thead>
      <th> Id </th>
      <th> First Name </th>
      <th> Middle Name </th>
      <th> Last Name </th>
      <th> Email </th>
      <th> Mobile </th>
   </thead>
   <tbody>
      {{#each students}}
      <tr>
         <td> {{id}} </td>
         <td> {{fname}} </td>
         <td> {{mname}} </td>
         <td> {{lname}} </td>
         <td> {{email}} </td>
         <td> {{mobile}} </td>
         <td>
            <button> Delete </button>
         </td>
      </tr>
      {{/each}}
   </tbody>
</table>   

<div id="head">
   <h3> Account List </h3>
</div>
<table id="accounts">
   <thead>
      <th> Id </th>
      <th> Student Id </th>
      <th> Last Name </th>
      <th> Amount Due </th>
      <th> Total Credit </th>
   </thead>
   <tbody>
      {{#each accounts}}
      <tr>
         <td> {{id}} </td>
         <td> {{sid}} </td>
         <td> {{lname}} </td>
         <td> {{amount}} </td>
         <td> {{credit}} </td>
      </tr>
      {{/each}}
   </tbody>
</table>   

<div id="head">
   <h3> Subject List </h3>
</div>
<table id="subjects">
   <thead>
      <th> Id </th>
      <th> Subject Name </th>
   </thead>
   <tbody>
      {{#each subjects}}
      <tr>
         <td> {{id}} </td>
         <td> {{name}} </td>
      </tr>
      {{/each}}
   </tbody>
</table>

<div id="head">
   <h3> Term List </h3>
</div>
<table id="terms">
   <thead>
      <th> Id </th>
      <th> Name </th>
      <th> Year </th>
      <th> Max Credit </th>
   </thead>
   <tbody>
      {{#each terms}}
      <tr>
         <td> {{id}} </td>
         <td> {{name}} </td>
         <td> {{year}} </td>
         <td> {{max}} </td>
      </tr>
      {{/each}}
