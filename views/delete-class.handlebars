<div class="container">
   <h2 class="mb-3 text-center"> Check Enrolled Classes </h2>

   <div class="d-flex justify-content-center">
      <form id="class_search mb-5" action="" method="">
         <label class="mr-3"> Search by your Student ID(Click button not Enter)</label>
         <input class="mx-sm-1" id="student_ID" type="text" name="student_ID" value="">
         <input class="btn btn-info" type="button" value="Search" onclick="getStudentID()">
         <a class="btn btn-dark" href="/classes/">Clear</a>
      </form>
   </div>

   <table class="table table-striped table-bordered text-center mt-5" id="studentClasses">
      <thead>
         <th> Subject </th>
         <th> Term </th>
         <th> Class </th>
         <th> Enrolled Students </th>
         <th> Max Students </th>
         <th> Credits </th>
         <th></th>
      </thead>
      <tboad>
         {{#each classes}}
         <tr>
            <td> {{sname}} </td>
            <td> {{tname}} {{tyear}}</td>
            <td> {{cname}} </td>
            <td> {{enroll}} </td>
            <td> {{max}} </td>
            <td> {{credit}} </td>
            <td>
               <button
                  class="btn btn-danger"
                  onclick="deleteClassById({{id}}, {{aid}})"
               > Delete </button>
            </td>
         </tr>
         {{/each}}
      </tbody>
   </table>   

</div>